//@version=4

study(title="Simple Horizontal Value and Offsets", shorttitle="Pivot", overlay=true)

valMedian() =>
    if syminfo.ticker == "AUDCAD"
        valMedian = input(defval=0.99, step=0.01, title="AUDCAD")
    else
        if syminfo.ticker == "AUDJPY" or syminfo.ticker == "CADJPY"                             // Exception
            valMedian = input(defval=82, step=1, title="AUDJPY/CADJPY")
        else
            if syminfo.ticker == "AUDUSD"
                valMedian = input(defval=0.78, step=0.01, title="AUDUSD") 
            else
                if syminfo.ticker == "CADCHF"
                    valMedian = input(defval=0.70, step=0.01, title="CADCHF")
                else
                    if syminfo.ticker == "CHFJPY"
                        valMedian = input(defval=117, step=1, title="CHFJPY") 
                    else
                        if syminfo.ticker == "EURAUD" or syminfo.ticker == "EURCAD"             // Exception
                            valMedian = input(defval=1.55, step=0.01, title="EURAUD/EURCAD")
                        else
                            if syminfo.ticker == "EURGBP" or syminfo.ticker == "USDCHF"         // Exception
                                valMedian = input(defval=0.89, step=0.01, title="EURGBP/USDCHF")
                            else
                                if syminfo.ticker == "EURJPY"
                                    valMedian = input(defval=127, step=1, title="EURJPY") 
                                else
                                    if syminfo.ticker == "EURNZD"
                                        valMedian = input(defval=1.68, step=0.01, title="EURNZD")
                                    else
                                        if syminfo.ticker == "EURUSD"
                                            valMedian = input(defval=1.21, step=0.01, title="EURUSD")
                                        else
                                            if syminfo.ticker == "GBPAUD"
                                                valMedian = input(defval=1.78, step=0.01, title="GBPAUD")
                                            else
                                                if syminfo.ticker == "GBPCAD"
                                                    valMedian = input(defval=1.76, step=0.01, title="GBPCAD")
                                                else
                                                    if syminfo.ticker == "GBPCHF"
                                                        valMedian = input(defval=1.25, step=0.01, title="GBPCHF")
                                                    else
                                                        if syminfo.ticker == "GBPJPY"
                                                            valMedian = input(defval=147, step=1, title="GBPJPY")
                                                        else
                                                            if syminfo.ticker == "GBPNZD"
                                                                valMedian = input(defval=1.91, step=0.01, title="GBPNZD")
                                                            else
                                                                if syminfo.ticker == "GBPUSD"
                                                                    valMedian = input(defval=1.39, step=0.01, title="GBPUSD") 
                                                                else
                                                                    if syminfo.ticker == "NZDCAD"
                                                                        valMedian = input(defval=0.91, step=0.01, title="NZDCAD")   
                                                                    else
                                                                        if syminfo.ticker == "NZDJPY"
                                                                            valMedian = input(defval=76, step=1, title="NZDJPY")
                                                                        else
                                                                            if syminfo.ticker == "NZDUSD"
                                                                                valMedian = input(defval=0.72, step=0.01, title="NZDUSD")
                                                                            else
                                                                                if syminfo.ticker == "USDCAD"
                                                                                    valMedian = input(defval=1.28, step=0.01, title="USDCAD")
                                                                                else
                                                                                    if syminfo.ticker == "USDJPY"
                                                                                        valMedian = input(defval=105, step=1, title="USDJPY")    
 
 
valOffset() =>
    if syminfo.ticker == "AUDCAD" or syminfo.ticker == "AUDUSD" or syminfo.ticker == "CADCHF" or syminfo.ticker == "EURAUD" or syminfo.ticker == "EURCAD"
        valOffset = 0.01  
    else   
        if syminfo.ticker == "EURGBP" or syminfo.ticker == "EURNZD" or syminfo.ticker == "EURUSD" or syminfo.ticker == "GBPAUD" or syminfo.ticker == "GBPCAD"
            valOffset = 0.01
        else   
            if syminfo.ticker == "GBPCHF" or syminfo.ticker == "GBPNZD" or syminfo.ticker == "GBPUSD" or syminfo.ticker == "NZDCAD" or syminfo.ticker == "NZDUSD"
                valOffset = 0.01
            else   
                if syminfo.ticker == "USDCAD" or syminfo.ticker == "USDCHF"
                    valOffset = 0.01
                else   
                    if syminfo.ticker == "AUDJPY" or syminfo.ticker == "CADJPY" or syminfo.ticker == "CHFJPY" or syminfo.ticker == "EURJPY" or syminfo.ticker == "GBPJPY"
                        valOffset = 1
                    else   
                        if syminfo.ticker == "NZDJPY" or syminfo.ticker == "USDJPY"
                            valOffset = 1    


// offset multiplier function.
offsetMult(num) => num * valOffset()

// Plot median line
midline     = plot(valMedian(), title="Median Line", color=#0099FF, linewidth=1, transp=0)

// ..colour and transparency variables for quicker 'style' edits..
_dc = #0099FF
_dt = 50
// plot upward offsets
plus1   = plot(valMedian() + offsetMult(1), title="Plus 1", color=_dc, linewidth=1, transp=_dt)
plus2   = plot(valMedian() + offsetMult(2), title="Plus 2", color=_dc, linewidth=1, transp=_dt)
//plus3   = plot(valMedian() + offsetMult(3), title="Plus 3", color=_dc, linewidth=1, transp=_dt)


// plot downward offsets
minus1  = plot(valMedian() - offsetMult(1), title="minus 1", color=_dc, linewidth=1, transp=_dt)
minus2  = plot(valMedian() - offsetMult(2), title="minus 2", color=_dc, linewidth=1, transp=_dt)
//minus3  = plot(valMedian() - offsetMult(3), title="minus 3", color=_dc, linewidth=1, transp=_dt)
